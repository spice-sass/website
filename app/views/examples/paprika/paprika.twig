{% extends '../../../layouts/demo.twig' %}


{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="/css/views/examples/paprika/paprika.css">
{% endblock %} 

{% block content %}

{% set tiles = 
	[{
		"img"      : '<img src="http://lorempixel.com/400/200/" alt="">',
		"title"    : "This is a tile",
		"caption"  : "The description of the awesome title goes here",
		"likes"    : 37,
		"shares"   : 14,
		"comments" : 3
	},{
		"img"      : '<img src="http://lorempixel.com/400/200/" alt="">',
		"title"    : "Second tile",
		"caption"  : "The description of the awesome title goes here bruv",
		"likes"    : 37,
		"shares"   : 14,
		"comments" : 3
	}]
%}

<header>
	<div class="container">
		<h1>Punfest</h1>
		<p class="strap">css only inspiration template</p>
		<form class="lined" action="#">
			<input type="search" placeholder="Search" />
		</form>
	</div>
</header>

<section id="main">

	<div class="container">

		<div class="masonry">

			{% for tile in tiles %}
				<div class="masonry-item">

					{{tile.img | raw}}
					<h3>{{tile.title}}</h3>
					<p>{{tile.caption}}</p>

					<ul class="social">
						<li><i class="line-icon-heart"></i>{{tile.likes}}</li>
						<li><i class="line-icon-share"></i>{{tile.shares}}</li>
						<li><i class="line-icon-speech-bubble"></i>{{tile.comments}}</li>
					</ul>

				</div>
			{% endfor %}	

		</div>



	</div>

</section>

{% endblock %}