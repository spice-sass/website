{% extends '../layouts/main.twig' %}
{% block title %}
	<title>{{siteTitle}}</title>
{% endblock %}

{% block content %}
{% set themes = 
	[{
		"img"  : "http://placehold.it/400x300",
		"name" : "Paprika",
		"desc" : "An inspiration website template with a css masonry style layout."
	},{
		"img"  : "http://placehold.it/400x300",
		"name" : "Saffron",
		"desc" : "An inspiration website template with a css masonry style layout."
	},{
		"img"  : "http://placehold.it/400x300",
		"name" : "Cinnamon",
		"desc" : "An inspiration website template with a css masonry style layout."
	}]
%}

<section class="stack" id="themed-examples">

	<div class="container">

		<div class="grid-row">

			{% for theme in themes %}
				<div class="example gridded-list">
				
					<div class="image-holer">
						<img class="max" src="{{theme.img}}">
					</div>

					<div class="text-holder">
						
						<h3>{{theme.name}}</h3>
						<p>{{theme.desc}}</p>
						<a href="/examples/{{theme.name | lower}}" class="button small flat-primary">View</a>

					</div>
					
				</div>
			{% endfor %}

		</div>

	</div>

</section>

<section class="stack" id="icons">
	
</section>

{% include '../components/footer/footer.twig' %}
{% endblock %}
{% block footerScript %}
	<script src="/js/react.min.js"></script>
	<script src="/js/examples.js"></script>
{% endblock %}