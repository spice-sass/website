{% extends '../layouts/main.twig' %}
{% block title %}
	<title>{{siteTitle}}</title>
{% endblock %}

{% block content %}
  	<section class="fullscreen stack" id="pane-1">
		
		<div class="centre-y text-centre">
			<h1 id="logo" class="leckerli-one fade-in" style="text-transform:none;font-weight:300;letter-spacing:0;">Spice</h1>
			<h2 id="strap" class="roboto-slab slide-in-right contrast">Add a little spice to your UI</h2>
			<a href="#installation" class="button large flat-secondary block-icon-open-book slide-in-right">Installation</a>
			<a href="/documentation#getting-started" class="button large flat-primary block-icon-open-book slide-in-left">View Docs</a>
			<p class="slide-in-right">{{version}}</p>
		</div>
		
	</section>

	<section class="fullscreen stack" id="installation">
			
			<div class="container">

				<div class="grid-row">

					<div class="grid-col-8 grid-col-indent-2">

						<h2 class="red centre-text">Installation &amp; Usage</h2>
						<p>Spice is available for download via npm or bower</p>

						<h5>npm</h5>
						<p class="code">
							npm install spice-sass
						</p>

						<h5>Bower</h5>
						<p class="code">
							bower install spice-sass
						</p>

						<p>
							Once installed you can import spice into your main sass file.
							<strong>Note:</strong> the import must be relative to your 
							node_modules/bower_components folder dependent on your chosen
							method of installation. E.g.
						</p>

						<p class="code">
							@import "../node_modules/spice-sass/src/spice";
						</p>

					</div>
	
				</div>

		</div>

	</section>
	{% include '../components/footer/footer.twig' %}
{% endblock %}


