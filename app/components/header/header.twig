<header class="sticky">
	
	<div class="container transition main {% if template == 'documentation' or template == '/examples/cinnamon/cinnamon' %}stretch{% endif %}">

		{% if template != 'index' %}
		<div id="logo" class="slide-in-right">
			<a href="/">
				<img src="/img/spice-logo.svg" width="55" />
			</a>
		</div>
		{% endif %}

		<nav class="horizontal main {% if template != 'index' %}shift{% endif %}">

			<ul>
				<li {% if template == 'documentation' %} class="active" {% endif %}>
					<a href="/documentation"><i class="line-icon-paper font20"></i> <span>Documentation</span></a>
				</li>
				<li {% if template == 'spice-examples' %} class="active" {% endif %}>
					<a href="/spice-examples"><i class="line-icon-thermometer font20"></i> <span>Examples</span></a>
				</li>
			</ul>

		</nav>

		{% if template == 'documentation' %}
			<i class="line-icon-menu font20" ng-click="toggleDocs()"></i>

			<div class="lined" id="search-docs"></div>

		{% else %}
			<div id="theme-switcher"></div>
		{% endif %}

	</div>

</header>